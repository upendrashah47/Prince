<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/colorLoginButton" android:startColor="@color/colorLoginButtonSelection" android:type="linear" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/colorLoginButton" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/colorLoginButton" android:startColor="@color/colorLoginButtonSelection" android:type="linear" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/colorLoginButton" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/colorLoginButton" />
            <stroke android:width="1dp" android:color="@color/colorLoginButton" />
        </shape>
    </item>
</selector>